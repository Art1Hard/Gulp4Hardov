{
	"compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
		"allowJs": true,
    "resolveJsonModule": true
	},
	"include": [
		"src/scripts/modules/*",
		"src/scripts/*"
	]
}